<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- Temporary hardcoded until we figure localization of the xaml rules story -->
    <LangName>en-us</LangName>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectCapability Include="DotNetCoreWeb" />   
    <ProjectCapability Include="DependencyPackageManagement" />
  </ItemGroup>
  
  <ItemGroup>
    <PropertyPageSchema Include="$(MSBuildThisFileDirectory)$(LangName)\web.general.browseobject.xaml"
                        Condition="Exists('$(MSBuildThisFileDirectory)$(LangName)\web.general.browseobject.xaml')">
      <Context>BrowseObject</Context>
    </PropertyPageSchema>
    <PropertyPageSchema Include="$(MSBuildThisFileDirectory)en-us\web.general.browseobject.xaml"
                        Condition="!Exists('$(MSBuildThisFileDirectory)$(LangName)\web.general.browseobject.xaml')">
      <Context>BrowseObject</Context>
    </PropertyPageSchema>
  </ItemGroup>
  
</Project>